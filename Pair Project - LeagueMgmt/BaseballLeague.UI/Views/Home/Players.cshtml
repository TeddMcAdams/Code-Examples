@using BaseballLeague.MODELS
@using BaseballLeague.UI.Models
@model ViewAllPlayersVm

@{
    ViewBag.Title = "Players";
}

<div class="jumbotron">
    <h1>Ohio Baseball League - Players</h1>
</div>

<div class="row">
    @foreach (Player p in Model.Players)
    {
        <div class="col-sm-4 col-md-3">
            <div class="list-group">
                <a href="/Player/Details/@(p.PlayerId)" class="list-group-item active">@($"#{p.JerseyNumber} {p.LastName}, {p.FirstName}")</a>
                <a href="/Team/Details/@($"{Model.Teams.Select(t => t).FirstOrDefault(t => t.TeamId == p.TeamId)?.TeamId}")" class="list-group-item">Team: <b>@($"{Model.Teams.Select(t => t).FirstOrDefault(t => t.TeamId == p.TeamId)?.Name}")</b></a>
                <a class="list-group-item">Position: <b>@($"{p.Position.Name}")</b></a>
                <a class="list-group-item">@($"{DateTime.Now.Year - 1}") BA: <b>@p.BatAvgStr</b></a>
                <a class="list-group-item">Rookie Year: <b>@($"{p.RookieYear}")</b></a>
            </div>
        </div>
    }
</div>
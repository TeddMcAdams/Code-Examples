@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
            <img src="/Content/images/OBLlogo(sm).png" class="img-responsive">
            <h1>Ohio Baseball League</h1>
</div>

<div class="row">
    <div class="col-sm-offset-1 col-sm-10 col-md-offset-0 col-md-4">
        <div class="panel panel-primary splash-panel">
            <div class="panel-heading">
                <h3>Special Announcements</h3>
            </div>
            <div class="panel-body">
                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        <div class="item active">
                            <img src="/Content/images/championshipbaseballbadge.png" class="img-responsive">
                        </div>
                        <div class="item">
                            <img src="/Content/images/playeroftheday.png" class="img-responsive">
                        </div>
                        <div class="item">
                            <img src="/Content/images/leaguechampsbadge.png" class="img-responsive">
                        </div>
                    </div>

                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div>
            </div>

            <div>
                <img src="/Content/images/SeasonTix.png" class="img-responsive" id="seasontickets"/>
            </div>
        </div>
    </div>

    <div class="col-sm-offset-1 col-sm-10 col-md-offset-0 col-md-4">
        <div class="panel panel-primary splash-panel">
            <div class="panel-heading">
                <h3>Upcoming Events</h3>
            </div>
            <div class="panel-body">
                <div class="event">
                    <div class="event-title">Fan Appreciation Night</div>
                    <div class="event-date">Saturday April 9th, 2016</div>
                    <div class="event-info">Free Hot Dogs & Fire Works</div>
                    <div class="event-courtesy">Courtesy of Ohio Baseball Network</div>
                </div>
                <div class="event">
                    <div class="event-title">Team Logo Car Magnets</div>
                    <div class="event-date">Saturday April 16th, 2016</div>
                    <div class="event-info">Team logo magnet for your car!</div>
                    <div class="event-courtesy">Courtesy of Progressive Insurance</div>
                </div>
                <div class="event">
                    <div class="event-title">Ohio Baseball Duffle Bag</div>
                    <div class="event-date">Saturday April 23rd, 2016</div>
                    <div class="event-info">The first 2,000 fans will receive a sports duffle bag!</div>
                    <div class="event-courtesy">Courtesy of Sherwin-Williams</div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-offset-1 col-sm-10 col-md-offset-0 col-md-4">
        <div class="panel panel-primary splash-panel">
            <div class="panel-heading">
                <h3>Game Schedule</h3>
            </div>
            <div class="panel-body">
                <div class="row games">
